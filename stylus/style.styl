@import ress
body
	background-color: #2C2F33
	display: flex
	flex-direction: row
	flex-wrap: wrap
	justify-content: center
	align-items: center
	height: 100vh
	padding: 2rem
	

#wrapper
	display: flex
	flex-direction: row
	justify-content: center
	flex-wrap: wrap
	width: 100%

.card
	&::before
		content: ''
		display: inline-block
		width: 60%
		height: 36%
		background-image: url(discord.svg)
	position: relative
	box-shadow: 0 0 10px rgba(black, .25)
	border-radius: 3px
	text-align: center
	padding: 1rem 3rem
	color: #ffffff
	margin: 1rem 1rem
	min-height: calc(10rem * 1.414)
	min-width: calc(10rem * 1)
	height: calc(20rem * 1.414)
	width: calc(20rem * 1)
	background-color: #7289DA
	p
		margin-top: .2rem
	
	.build_number::before
		content: 'Build Number: '
	.version_hash
		overflow: hidden
		white-space: nowrap
		text-overflow: ellipsis
		&::before
			content: 'Version Hash: '
	a
		&:link, &:visited, &:hover, &:active
			color: #ffffff
		i
			margin-top: 6rem
			margin-left: 1rem
			font-size: 2rem

#stable
	background-color: #5C6BC0

#ptb
	background-color: #7E57C2

#canary
	background-color: #FFA726

#header
	color: #ffffff
	text-align: center
	width: 100%

#footer
	width: 100%
	color: #555555
	text-align: center
	a
		&:link, &:visited, &:hover, &:active
			color: #335577